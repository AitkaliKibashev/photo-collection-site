rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для коллекции images
    match /images/{document=**} {
      allow read: if true; // Все могут читать
      allow write: if request.auth != null; // Только авторизованные могут писать
    }
    
    // Правила для коллекции analytics
    match /analytics/{document=**} {
      allow read: if request.auth != null; // Только авторизованные могут читать
      allow create: if true; // Все могут создавать записи (для сбора аналитики)
      allow update, delete: if request.auth != null; // Только авторизованные могут обновлять/удалять
    }
  }
}

